---
import type { ExperienceEntry } from "../../../data/experience";

interface Props {
  experience: ExperienceEntry;
}

const { experience } = Astro.props;
---

<article>
  <div class="mb-1.5 flex justify-between gap-5">
    <h3 class="text-h3">{experience.company}: {experience.role}</h3>
    <div class="mt-2.5 flex-shrink-0">
      <p class="text-link">
        ({experience.from} - {experience.to ?? "Present"})
      </p>
    </div>
  </div>

  <div class="flex items-center gap-1.5 text-details">
    {
      experience.skills.map((skill, i) => (
        <>
          <button type="button" data-tech={skill.id}>
            {skill.name}
          </button>
          {i < experience.skills.length - 1 && <span>â€¢</span>}
        </>
      ))
    }
  </div>

  <div set:html={experience.description} class="mb-6 mt-5 text-body" />
</article>
